import java.util.*;
public class seconds
{
    public static void main(String[] args)
    {
        Scanner in = new Scanner(System.in);
        System.out.print("Enter the seconds : ");
        int sec = in.nextInt();
        int S = sec % 60;
        int T = sec / 60;
        int M = T %60;
        int H = T / 60;
        System.out.println(H+":"+M+":"+S);
    }
    
}
